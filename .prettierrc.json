{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 80,
  "trailingComma": "none",
  "experimentalTernaries": true,
  "overrides": [
    {
      "files": "*.vue",
      "options": {
        "parser" : "vue",
        "vueIndentScriptAndStyle": false,
        "tabWidth": 4
      }
    },
    {
      "files": ["*.js", "*.ts"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
